<beans profile="default"
       xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jee="http://www.springframework.org/schema/jee"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee.xsd">

    <jee:jndi-lookup id="webEqaDataSource" jndi-name="jdbc/web_eqa_db"/>
    <jee:jndi-lookup id="eqaWebReadWriteDataSource" jndi-name="jdbc/web_read_write_db"/>

    <bean id="webEqaDatabase" class="nz.govt.nzqa.healthchecks.resource.Database">
        <property name="dataSource" ref="webEqaDataSource"/>
    </bean>
    <bean id="webReadWriteDatabase" class="nz.govt.nzqa.healthchecks.resource.Database">
        <property name="dataSource" ref="eqaWebReadWriteDataSource"/>
    </bean>
    <bean id="fileService" class="nz.govt.nzqa.healthchecks.resource.FileService">
        <property name="username" value="${secure.cifs.cmsAssetsClient.user}"/>
        <property name="password" value="${secure.cifs.cmsAssetsClient.password}"/>
        <property name="baseUrl" value="${secure.cifs.cmsAssetsClient.url}"/>
        <property name="domain" value="${secure.cifs.cmsAssetsClient.domain}"/>
    </bean>

</beans>