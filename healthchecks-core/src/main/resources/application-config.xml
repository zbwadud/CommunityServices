        <!--<property name="resourceRef" value="true"/>-->
        <!--<property name="jndiName" value="jdbc/web_eqa_db"/>-->
    <!--</bean>-->

    <jee:jndi-lookup id="eqaDataSource" jndi-name="jdbc/web_eqa_db"/>

    <bean id="database" class="nz.govt.nzqa.healthchecks.resource.Database">
        <property name="eqaDataSource" ref="eqaDataSource"/>
    </bean>

    <bean id="databaseHealthCheck" class="nz.govt.nzqa.healthchecks.library.DatabaseHealthCheck">
        <constructor-arg ref="database"/>
    </bean>

    <bean id="healthCheckRegistry" class="nz.govt.nzqa.healthchecks.registry.HealthChecksRegistrar">
        <property name="healthCheck">
            <map>
                <entry key="database" value-ref="databaseHealthCheck"/>
            </map>
        </property>
    </bean>


